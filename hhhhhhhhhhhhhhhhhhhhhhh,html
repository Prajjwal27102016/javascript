  <h1>Changing Number Project</h1>
  <div id="number">0</div>

  <button onclick="increase()">âž• Increase</button>
  <button onclick="decrease()">âž– Decrease</button>
  <button onclick="randomize()">ðŸŽ² Random</button>
  <button onclick="reset()">ðŸ”„ Reset</button>

  <script>
    let num = 0;

    function updateDisplay() {
      const numberElement = document.getElementById('number');
      numberElement.textContent = num;

      // Change color based on value
      if (num > 0) {
        numberElement.style.color = 'green';
      } else if (num < 0) {
        numberElement.style.color = 'red';
      } else {
        numberElement.style.color = 'black';
      }
    }

    function increase() {
      num++;
      updateDisplay();
    }

    function decrease() {
      num--;
      updateDisplay();
    }

    function randomize() {
      num = Math.floor(Math.random() * 201) - 100; // Random number between -100 and 100
      updateDisplay();
    }

    function reset() {
      num = 0;
      updateDisplay();
    }

    updateDisplay(); // Initial display